<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edt_comment"
        style="@style/EditText_Base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_left"
        android:layout_marginRight="@dimen/main_margin_right"
        android:layout_marginTop="@dimen/main_margin_top"
        android:background="@drawable/shape_stroke_line_bg_white"
        android:gravity="left|top"
        android:hint="有什么想对主办方说的吗?(选填)"
        android:lineSpacingExtra="@dimen/main_font_body_line_space"
        android:lines="5"
        android:maxLength="50"
        android:paddingBottom="@dimen/main_padding_bottom"
        android:paddingLeft="@dimen/main_padding_left"
        android:paddingRight="@dimen/main_padding_right"
        android:paddingTop="@dimen/main_padding_top"
        android:textColor="@color/main_font"
        android:textColorHint="@color/main_font_gray_2"
        android:textSize="@dimen/main_font_body" />

    <TextView
        android:id="@+id/tv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/main_margin_bottom"
        android:layout_marginLeft="@dimen/main_margin_left"
        android:layout_marginRight="@dimen/main_margin_right"
        android:layout_marginTop="@dimen/main_margin_top"
        android:text="70"
        android:textColor="@color/main_font_gray_2"
        android:textSize="@dimen/main_font_body" />
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/bt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@drawable/buttonactivity"
            android:text="立即报名"
            android:textSize="14sp"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:background="@drawable/buttonactivitydisable"
            android:text="朕再想想"
            android:layout_marginLeft="40dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>