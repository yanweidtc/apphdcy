<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="0dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="240px"
            android:layout_height="240px"
            android:background="@drawable/tab_icon_activity_default"
            android:scaleType="centerCrop"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/main_margin_left"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_info_title"
            android:text="热门回答"
            android:layout_weight="1"
            android:layout_gravity="left|top"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:textSize="40px"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="@dimen/main_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_info_tag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门回答"
                android:textColor="@color/main_font_gray_2"
                android:textSize="@dimen/main_font_tips"/>
            <TextView
                android:id="@+id/tv_info_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_info_tag_name"
                android:layout_marginLeft="@dimen/main_margin_left"
                android:text="2016/05/24"
                android:textColor="@color/main_font_gray_2"
                android:textSize="@dimen/main_font_tips" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:gravity="bottom"
                 >
            <ImageView
                android:id="@+id/iv_watched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70px"
                android:src="@mipmap/icon_count_view" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/iv_watched"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info_watched"
                android:layout_marginTop="10px"
                android:text="热门回答"
                android:textColor="@color/main_font_gray_2"
                android:textSize="@dimen/main_font_tips"/>
                </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_efeff1" />
</android.support.v7.widget.CardView>