<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/transparent_black_60">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_leader_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/ic_launcher"
            android:alpha="0.7"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/transparent_black_50"
            android:id="@+id/imageView" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:layout_marginTop="45dp"
        android:background="@color/transparent_white_50"
        android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/tv_leader_intr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:text="本届首席大咖"
        android:textColor="#FFFFFF"/>
    <TextView
        android:id="@+id/tv_leader_name"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="36sp"
        android:text="王健林"
        android:textColor="#FFFFFF"
        />
</FrameLayout>
</FrameLayout>